import random

print('Hello!')
name = input('What is your name: ') #Ask for name

SecretNumber = random.randint(1, 20) #Selects random number to be guesses between 1 and 20
print('Well ' + name + ', Im thinking of a number between 1 and 20. Can you guess it?')

for GuessesTaken in range(1, 7): #Gives the user 7 tries to guess the secret number
    guess = int(input('Take a Guess: ')) #Input for guess
    
    if guess < SecretNumber:
        print('Your guess is to low!')
    elif guess > SecretNumber:
        print('Your guess is to high')
    else:
        break
    
if guess == SecretNumber: #User guessed right
    print('Congrates ' + name + ' you guessed it in ' + str(GuessesTaken) + ' trys!')      
else:
    print('You were not able to guess the number. The number I was thinking of was ' + str(SecretNumber) + '!') #User was not able to guess the number
